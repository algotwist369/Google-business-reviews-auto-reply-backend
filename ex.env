NODE_ENV=development
PORT=5000

# Client / API URLs
CLIENT_URL=http://localhost:5173
API_URL=http://localhost:5000

# MongoDB
MONGO_URI=mongodb://localhost:27017/google-business

# Session / JWT
SESSION_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=1d

# Google OAuth
GOOGLE_CLIENT_ID=replace-with-google-client-id
GOOGLE_CLIENT_SECRET=replace-with-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# OpenAI
OPENAI_API_KEY=replace-with-openai-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1/chat/completions

# Auto reply service
AUTO_REPLY_SERVICE_ENABLED=true
AUTO_REPLY_SCAN_INTERVAL_MS=300000
AUTO_REPLY_MAX_GENERATE=5
AUTO_REPLY_MAX_DISPATCH=5

# Rate limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=300

# Logging
LOG_DIRECTORY=./logs

# Razorpay Payments
RAZORPAY_KEY_ID=replace-with-razorpay-key-id
RAZORPAY_KEY_SECRET=replace-with-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=replace-with-razorpay-webhook-secret

